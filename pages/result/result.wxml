<view wx:if="{{quiz!=null}}">
    <text wx:if="{{mode=='answer'||mode=='redo'}}">正确：{{succ}}， 错误：{{fail}}</text>
    <button wx:if="{{mode=='review'}}" bindtap="bindRedo">重做错题</button>
    <button wx:if="{{fail!=0&&(mode=='answer'||mode=='redo')}}" bindtap="bindReview">查看做错题目</button>
    <button wx:if="{{inStudy&&fail==0&&hasMoreStudy&&(mode=='answer'||mode=='redo')}}" bindtap="bindContStudy">继续学习</button>
    <text wx:if="{{inStudy&&fail==0&&!hasMoreStudy&&(mode=='answer'||mode=='redo')}}">已完成学习</text>
    <button wx:if="{{!inStudy&&fail==0&&(mode=='answer'||mode=='redo')}}" bindtap="bindContQuiz">继续测试</button>
    <button wx:if="{{mode=='study'}}" bindtap="bindAnswer">进行测试</button>
</view>

